<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:background="#0062E3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        style="@style/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight Scheduler" />

    <net.skyscanner.backpack.card.BpkCardView
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180sp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerStyle="large"
        app:elevationLevel="focused">

        <net.skyscanner.backpack.text.BpkText
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Flight Number: 2112"
            android:textStyle="bold" />
    </net.skyscanner.backpack.card.BpkCardView>

    <net.skyscanner.backpack.card.BpkCardView
        android:layout_width="380dp"
        android:layout_height="169dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="16dp"
        app:cornerStyle="large"
        app:elevationLevel="focused">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <net.skyscanner.backpack.text.BpkText
                style="@style/Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:text="Departure Details"
                android:textSize="22sp"
                android:textStyle="bold" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Airport Code: YYZ" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:text="Departure Time: 20:30" />


        </LinearLayout>

    </net.skyscanner.backpack.card.BpkCardView>

    <net.skyscanner.backpack.card.BpkCardView
        android:layout_width="380dp"
        android:layout_height="184dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="16dp"
        app:cornerStyle="large"
        app:elevationLevel="focused">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <net.skyscanner.backpack.text.BpkText
                style="@style/Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:text="Arrival Details"
                android:textSize="22sp"
                android:textStyle="bold" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Airport Code: JFK" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:text="Departure Time: 22:20" />


        </LinearLayout>

    </net.skyscanner.backpack.card.BpkCardView>


</LinearLayout>
